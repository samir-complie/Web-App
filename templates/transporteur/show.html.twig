<!DOCTYPE html>

<title>Détails du Transporteur</title>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

{% block body %}
<div class="container mt-5">
<div class="card shadow">
<div class="card-body">
    <h1 class="text-center mb-4">Détails du Transporteur</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th class="bg-light"&>Id</th>
                <td>{{ transporteur.id }}</td>
            </tr>
            <tr>
                <th class="bg-light">Nom</th>
                <td>{{ transporteur.nom }}</td>
            </tr>
            <tr>
                <th class="bg-light">Prenom</th>
                <td>{{ transporteur.prenom }}</td>
            </tr>
            <tr>
                <th class="bg-light">Is_disponible</th>
                <td>{{ transporteur.isDisponible ? 'Yes' : 'No' }}</td>
            </tr>

            <tr>
                <th class="bg-light">QR Code: </th>
                <td>
                    <img src="{{ asset('images/qr_codes/qr_' ~ transporteur.id ~ '.svg') }}" alt="QR Code" width="150" height="150">
                </td> 
            </tr>  

        </tbody>
    </table>
    

     <div class="text-center mt-4">
                    <a href="{{ path('app_transporteur_index') }}" class="btn btn-secondary">Retour à la liste</a>
                    <a href="{{ path('app_transporteur_edit', {'id': transporteur.id}) }}" class="btn btn-warning">Modifier</a>
                    {{ include('transporteur/_delete_form.html.twig') }}
    </div>
</div>
</div>
</div>
</body> 


    
{% endblock %}
