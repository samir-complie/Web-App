{% extends 'base_front.html.twig' %}

{% block title %}Livraisons - FrontOffice{% endblock %}

{% block body %}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
    {% endfor %}
{% endfor %}



    <div class="container mt-4">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
             <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                  <li class="nav-item active"><a href="{{path('app_livraison_index')}}" class="nav-link">Livraison</a></li>
                  <li class="nav-item active"><a href="{{path('app_voiture_index')}}" class="nav-link">Voiture</a></li>
                  <li class="nav-item active"><a href="{{path('app_transporteur_index')}}" class="nav-link">Transporteur</a></li>
                </ul>
              </div>
            
        </nav>

        <div class="container mt-4">
        <h1 class="text-success text-center mb-4">Liste des transporteurs</h1>
        <form method="GET" action="{{ path('app_transporteur_index') }}" class="mb-4">
          <div class="row">
                    <div class="col-md-4">
                        <input type="text" name="nom" class="form-control" placeholder="Nom" value="{{ app.request.query.get('nom') }}">
                    </div>
                    <div class="col-md-4">
                        <input type="text" name="prenom" class="form-control" placeholder="Prénom" value="{{ app.request.query.get('prenom') }}">
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">Filtrer</button>
                        <a href="{{ path('app_transporteur_index') }}" class="btn btn-secondary">Réinitialiser</a>
                    </div>
                </div>
            </form>  

        <table class="table table-bordered text-center">
            <thead class="bg-light">
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Disponible</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for transporteur in transporteurs %}
                <tr>
                    <td>{{ transporteur.id }}</td>
                    <td>{{ transporteur.nom }}</td>
                    <td>{{ transporteur.prenom }}</td>
                    <td>
                       <span class="badge {% if transporteur.isDisponible %}bg-success{% else %}bg-danger{% endif %}">
                            {{ transporteur.isDisponible ? 'Oui' : 'Non' }}
                       </span>
                    </td> 
                    <td>
                        <a href="{{ path('app_transporteur_show', {'id': transporteur.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_transporteur_edit', {'id': transporteur.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center text-muted">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
             
        <div class="text-center mt-4">
        <a href="{{ path('app_transporteur_new') }}" class="btn btn-success rounded-pill px-4">Créer un nouveau transporteur</a>
        </div>
        </div> 
{% endblock %}
