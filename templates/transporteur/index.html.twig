{% extends 'base_front.html.twig' %}

{% block title %}Livraisons - FrontOffice{% endblock %}

{% block body %}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
    {% endfor %}
{% endfor %}



    <div class="container mt-4">
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
            
    
              <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                  <li class="nav-item active"><a href="{{path('app_livraison_index')}}" class="nav-link">Transporteur</a></li>
                  <li class="nav-item active"><a href="{{path('app_voiture_index')}}" class="nav-link">Voiture</a></li>
                  <li class="nav-item active"><a href="{{path('app_transporteur_index')}}" class="nav-link">Livraison</a></li>
                </ul>
              </div>
            
          </nav>
        <h1 class="mb-4">Liste des transporteurs</h1>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Disponible</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for transporteur in transporteurs %}
                <tr>
                    <td>{{ transporteur.id }}</td>
                    <td>{{ transporteur.nom }}</td>
                    <td>{{ transporteur.prenom }}</td>
                    <td>{{ transporteur.isDisponible ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('app_transporteur_show', {'id': transporteur.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_transporteur_edit', {'id': transporteur.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_transporteur_new') }}" class="btn btn-primary">Créer un nouveau transporteur</a>
    </div>
{% endblock %}
