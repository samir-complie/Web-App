<!DOCTYPE html>

<title>Modifier la  Transporteur</title>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

{% block body %}

{# templates/transporteur/edit.html.twig #}

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}

<body class="bg-light">
<div class="container mt-5">
<div class="card shadow">
<div class="card-body">
    <h1 class="text-center mb-4">Modifier le Transporteur</h1>   

    {{ include('transporteur/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

    <div class="text-center mt-4">
        <a href="{{ path('app_transporteur_index') }}" class="btn btn-secondary">Retour à la liste</a>
        {{ include('transporteur/_delete_form.html.twig') }}
    </div>
</div>
</div>
</div>
</body>
{% endblock %}
