{% extends 'base_front.html.twig' %}

{% block title %}Voitures - FrontOffice{% endblock %}

{% block body %}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
    {% endfor %}
{% endfor %}

    <div class="container mt-4">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                  <li class="nav-item active"><a href="{{path('app_livraison_index')}}" class="nav-link">Livraison</a></li>
                  <li class="nav-item active"><a href="{{path('app_voiture_index')}}" class="nav-link">Voiture</a></li>
                  <li class="nav-item active"><a href="{{path('app_transporteur_index')}}" class="nav-link">Transporteur</a></li>
                </ul>
              </div>
        </nav>

        <h1 class="text-success text-center mb-4">Liste des voitures</h1>

        <form method="get" action="{{ path('app_voiture_filter') }}" class="mb-4">
            <div class="input-group">
                <input type="text" name="matricule" class="form-control" placeholder="Filtrer par matricule" value="{{ app.request.query.get('matricule') }}">
                <button type="submit" class="btn btn-primary">Filtrer</button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-bordered text-center">
                <thead class="bg-light">
                 <tr>
                        <th>Id</th>
                        <th>Modèle</th>
                        <th>Matricule</th>
                        <th>Capacité</th>
                        <th>Actions</th>
                    </tr>
            </thead>
            <tbody>
            {% for voiture in voitures %}
                <tr>
                    <td>{{ voiture.id }}</td>
                    <td>{{ voiture.model }}</td>
                    <td>{{ voiture.matricule }}</td>
                    <td>
                        <span class="badge bg-primary">{{ voiture.capacite }} kg</span>
                    </td>

                    <td>
                        <a href="{{ path('app_voiture_show', {'id': voiture.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_voiture_edit', {'id': voiture.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center text-muted">Aucune voiture trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('app_voiture_new') }}" class="btn btn-primary">Créer une nouvelle voiture</a>
        </div>
    </div>
{% endblock %}
