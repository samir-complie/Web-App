{% extends 'base_front.html.twig' %}

{% block title %}Livraisons - FrontOffice{% endblock %}

{% block body %}
    <div class="container mt-4">
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
            
    
              <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                  <li class="nav-item active"><a href="{{path('app_livraison_index')}}" class="nav-link">Transporteur</a></li>
                  <li class="nav-item active"><a href="{{path('app_voiture_index')}}" class="nav-link">Voiture</a></li>
                  <li class="nav-item active"><a href="{{path('app_transporteur_index')}}" class="nav-link">Livraison</a></li>
                </ul>
              </div>
            
          </nav>
        <h1 class="mb-4 text-center">Liste des voitures</h1>

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Modèle</th>
                    <th scope="col">Matricule</th>
                    <th scope="col">Capacité</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for voiture in voitures %}
                <tr>
                    <td>{{ voiture.id }}</td>
                    <td>{{ voiture.model }}</td>
                    <td>{{ voiture.matricule }}</td>
                    <td>{{ voiture.capacite }}</td>
                    <td>
                        <a href="{{ path('app_voiture_show', {'id': voiture.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_voiture_edit', {'id': voiture.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
        <div class="text-center mt-4">
            <a href="{{ path('app_voiture_new') }}" class="btn btn-primary">Créer une nouvelle voiture</a>
        </div>
    </div>
{% endblock %}
