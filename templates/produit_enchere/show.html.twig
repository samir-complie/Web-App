{% extends 'base_front.html.twig' %}

{% block title %}Hello FrontOffice/ProductSingleController!{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h1 class="mb-4 text-center">ProduitEnchere</h1>
        
        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ produit_enchere.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ produit_enchere.nom }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ produit_enchere.description }}</td>
                </tr>
                <tr>
                    <th>Quantité</th>
                    <td>{{ produit_enchere.quantie }}</td>
                </tr>
                <tr>
                    <th>Path Image</th>
                    <td>{{ produit_enchere.pathImg }}</td>
                </tr>
                <tr>
                    <th>Prix Final</th>
                    <td>{{ produit_enchere.prixF }}</td>
                </tr>
                <tr>
                    <th>Prix Initial</th>
                    <td>{{ produit_enchere.prixI }}</td>
                </tr>
                <tr>
                    <th>Agriculteur</th>
                    <td>{{ produit_enchere.agriculteur.nom }}<p></p>{{ produit_enchere.agriculteur.prenom }}</td>
                </tr>
                <tr>
                    <th>Catégorie</th>
                    <td>{{ produit_enchere.categorie.nom }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_produit_enchere_index') }}" class="btn btn-secondary">Back to List</a>
            <a href="{{ path('app_produit_enchere_edit', {'id': produit_enchere.id}) }}" class="btn btn-warning">Edit</a>
        </div>

        <div class="mt-3">
            {{ include('produit_enchere/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}